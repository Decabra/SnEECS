import pygame, sys
from pygame import *
from pygame.locals import *
#Colors
RED =   (255,   0,   0)
BLACK = (0, 0, 0)
#Initial Constants
SCREEN_WIDTH = 1300
SCREEN_HEIGHT = 700
pygame.init() #Setting up Pygame
def main():
    game_setup()
    game_Loop()
def game_setup():
    background()
    snake_body()
#Creating the game window
#Setting the background colour to Red ##RBG##
display.set_caption("Hello World!")
def background():
    global DISPLAYSURF
    DISPLAYSURF = display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
    DISPLAYSURF.fill(RED)
def snake_body():
    global X, Y
    X = SCREEN_WIDTH // 2
    Y = SCREEN_HEIGHT // 2
    global body
    body = pygame.draw.rect(DISPLAYSURF, BLACK, [X, Y, 20, 25], 0)
def game_Loop():
    i=10
    #body=pygame.draw.rect(DISPLAYSURF, BLACK, [X, Y, 20, 25])
    while True:
        for event in pygame.event.get():
            if event.type == QUIT:
                pygame.quit()
                sys.exit()
            display.update()
            i+=30
            global body
            move = body.move(i, i)
            body=pygame.draw.rect(DISPLAYSURF, BLACK, move, 0)
            #body.fill(BLACK)

#Executing Program
main()
