import pygame, sys
from pygame import *
from pygame.locals import *
import time
pygame.init()
#Colors
RED =   (255,   0,   0)
BLACK = (0, 0, 0)
GREEN = (0, 255, 0)
clock = pygame.time.Clock()
FPS = 60
#pygame.mixer.music.load("Game_Music.mp3")
#pygame.mixer.music.play(-1,0.0)
#Initial Constants
body_size = 15
vel = 10
SCREEN_WIDTH = 690
SCREEN_HEIGHT = 300
background_image = pygame.image.load("SEECS.jpg")
pygame.init() #Setting up Pygame
def main():
    game_setup()
    game_Loop()
def game_setup():
    background()
#Creating the game window
#Setting the background colour to Red ##RBG##
display.set_caption("snEECS!")
def background():
    global DISPLAYSURF
    DISPLAYSURF = display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
    #DISPLAYSURF.fill(RED)

def game_Loop():
    i=10
    X = SCREEN_WIDTH // 2
    Y = SCREEN_HEIGHT // 2
    while True:
        for event in pygame.event.get():
            if event.type == QUIT:
                pygame.quit()
                sys.exit()

        if event.type == pygame.KEYDOWN:
            move_Left = event.key == pygame.K_LEFT
            move_Right = event.key == pygame.K_RIGHT
            move_Up = event.key == pygame.K_UP
            move_Down = event.key == pygame.K_DOWN

                ##Changing snake coordinates on key presses
            if move_Left:
                X -= vel
            if move_Right:
                X += vel
            if move_Up:
                Y -= vel
            if move_Down:
                Y += vel
        #DISPLAYSURF.fill(RED)
        DISPLAYSURF.blit(background_image, [0, 0])
        body=pygame.draw.rect(DISPLAYSURF, GREEN, (X, Y, body_size, body_size))
        display.update()
        clock.tick(FPS)

#Executing Program
main()
